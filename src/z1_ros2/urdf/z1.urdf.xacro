<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="z1_description">

  <!-- ROS2 Control Plugin -->
  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <parameters>$(find z1_ros2)/config/z1_controllers.yaml</parameters>
    </plugin>
  </gazebo>

  <!-- ROS2 Control Hardware Interface -->
  <ros2_control name="Z1HardwareInterface" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    
    <joint name="joint1">
      <command_interface name="position">
        <param name="min">-2.618</param>
        <param name="max">2.618</param>
      </command_interface>
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    
    <joint name="joint2">
      <command_interface name="position">
        <param name="min">0.0</param>
        <param name="max">2.967</param>
      </command_interface>
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    
    <joint name="joint3">
      <command_interface name="position">
        <param name="min">-2.88</param>
        <param name="max">0.0</param>
      </command_interface>
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    
    <joint name="joint4">
      <command_interface name="position">
        <param name="min">-1.518</param>
        <param name="max">1.518</param>
      </command_interface>
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    
    <joint name="joint5">
      <command_interface name="position">
        <param name="min">-1.344</param>
        <param name="max">1.344</param>
      </command_interface>
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    
    <joint name="joint6">
      <command_interface name="position">
        <param name="min">-2.793</param>
        <param name="max">2.793</param>
      </command_interface>
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>

  <!-- Base Link -->
  <link name="world"/>
  <joint name="base_static_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="world"/>
    <child link="link00"/>
  </joint>

  <!-- Link 00 -->
  <link name="link00">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.051" radius="0.0325"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.051" radius="0.0325"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0255"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="-0.00334984 -0.00013615 0.02495843"/>
      <mass value="0.47247481"/>
      <inertia ixx="0.00037937" ixy="-3.5e-07" ixz="-1.037e-05" iyy="0.00041521" iyz="-9.9e-07" izz="0.00053066"/>
    </inertial>
  </link>

  <!-- Joint 1 -->
  <joint name="joint1" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 0.0585"/>
    <parent link="link00"/>
    <child link="link01"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="1.0" friction="1.0"/>
    <limit effort="30.0" lower="-2.618" upper="2.618" velocity="3.1415"/>
  </joint>

  <!-- Link 01 -->
  <link name="link01">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.045" radius="0.03"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 1"/>
      </material>
    </visual>
    <inertial>
      <origin rpy="0 0 0" xyz="2.47e-06 -0.00025198 0.02317169"/>
      <mass value="0.67332551"/>
      <inertia ixx="0.00128328" ixy="-6e-08" ixz="-4e-07" iyy="0.00071931" iyz="5e-07" izz="0.00083936"/>
    </inertial>
  </link>

  <!-- Joint 2 -->
  <joint name="joint2" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 0.045"/>
    <parent link="link01"/>
    <child link="link02"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="2.0" friction="2.0"/>
    <limit effort="60.0" lower="0.0" upper="2.967" velocity="3.1415"/>
  </joint>

  <!-- Link 02 -->
  <link name="link02">
    <visual>
      <origin rpy="0 1.5708 0" xyz="-0.175 0 0"/>
      <geometry>
        <cylinder length="0.35" radius="0.025"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.35" radius="0.025"/>
      </geometry>
      <origin rpy="0 1.5708 0" xyz="-0.175 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="-0.11012601 0.00240029 0.00158266"/>
      <mass value="1.19132258"/>
      <inertia ixx="0.00102138" ixy="0.00062358" ixz="5.13e-06" iyy="0.02429457" iyz="-2.1e-06" izz="0.02466114"/>
    </inertial>
  </link>

  <!-- Joint 3 -->
  <joint name="joint3" type="revolute">
    <origin rpy="0 0 0" xyz="-0.35 0 0"/>
    <parent link="link02"/>
    <child link="link03"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="1.0" friction="1.0"/>
    <limit effort="30.0" lower="-2.88" upper="0.0" velocity="3.1415"/>
  </joint>

  <!-- Link 03 -->
  <link name="link03">
    <visual>
      <origin rpy="0 1.5708 0" xyz="0.109 0 0.055"/>
      <geometry>
        <cylinder length="0.218" radius="0.02"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.218" radius="0.02"/>
      </geometry>
      <origin rpy="0 1.5708 0" xyz="0.109 0 0.055"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0.10609208 -0.00541815 0.03476383"/>
      <mass value="0.83940874"/>
      <inertia ixx="0.00108061" ixy="-8.669e-05" ixz="-0.00208102" iyy="0.00954238" iyz="-1.332e-05" izz="0.00886621"/>
    </inertial>
  </link>

  <!-- Joint 4 -->
  <joint name="joint4" type="revolute">
    <origin rpy="0 0 0" xyz="0.218 0 0.057"/>
    <parent link="link03"/>
    <child link="link04"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="1.0" friction="1.0"/>
    <limit effort="30.0" lower="-1.518" upper="1.518" velocity="3.1415"/>
  </joint>

  <!-- Link 04 -->
  <link name="link04">
    <visual>
      <origin rpy="0 0 0" xyz="0.035 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.025"/>
      </geometry>
      <material name="yellow">
        <color rgba="0.8 0.8 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.07" radius="0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.035 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0.04366681 0.00364738 -0.00170192"/>
      <mass value="0.56404563"/>
      <inertia ixx="0.00031576" ixy="8.13e-05" ixz="4.091e-05" iyy="0.00092996" iyz="-5.96e-06" izz="0.00097912"/>
    </inertial>
  </link>

  <!-- Joint 5 -->
  <joint name="joint5" type="revolute">
    <origin rpy="0 0 0" xyz="0.07 0.0 0.0"/>
    <parent link="link04"/>
    <child link="link05"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="1.0" friction="1.0"/>
    <limit effort="30.0" lower="-1.344" upper="1.344" velocity="3.1415"/>
  </joint>

  <!-- Link 05 -->
  <link name="link05">
    <visual>
      <origin rpy="0 0 0" xyz="0.025 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.02"/>
      </geometry>
      <material name="purple">
        <color rgba="0.8 0.2 0.8 1"/>
      </material>
    </visual>
    <inertial>
      <origin rpy="0 0 0" xyz="0.03121533 0.0 0.00646316"/>
      <mass value="0.38938492"/>
      <inertia ixx="0.00017605" ixy="4e-07" ixz="5.689e-05" iyy="0.00055896" iyz="-1.3e-07" izz="0.0005386"/>
    </inertial>
  </link>

  <!-- Joint 6 -->
  <joint name="joint6" type="revolute">
    <origin rpy="0 0 0" xyz="0.0492 0.0 0.0"/>
    <parent link="link05"/>
    <child link="link06"/>
    <axis xyz="1 0 0"/>
    <dynamics damping="1.0" friction="1.0"/>
    <limit effort="30.0" lower="-2.793" upper="2.793" velocity="3.1415"/>
  </joint>

  <!-- Link 06 (End Effector) -->
  <link name="link06">
    <visual>
      <origin rpy="0 1.5708 0" xyz="0.025 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.02"/>
      </geometry>
      <material name="orange">
        <color rgba="1.0 0.5 0.0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.02"/>
      </geometry>
      <origin rpy="0 1.5708 0" xyz="0.025 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0.0241569 -0.00017355 -0.00143876"/>
      <mass value="0.28875807"/>
      <inertia ixx="0.00018328" ixy="1.22e-06" ixz="5.4e-07" iyy="0.0001475" iyz="8e-08" izz="0.0001468"/>
    </inertial>
  </link>

</robot>